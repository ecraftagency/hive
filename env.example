# Agent Configuration
# Copy this file to .env and modify values as needed
# All values are optional - defaults will be used if not set

# =============================================================================
# Server Configuration
# =============================================================================

# HTTP server port to listen on
# Type: string, Format: "8080", "3000", etc.
# Range: Valid port numbers (1-65535)
# Default: 8080
SERVER_PORT=8080

# =============================================================================
# Redis Configuration
# =============================================================================

# Redis connection string
# Type: string, Format: "host:port", "localhost:6379"
# Range: Valid Redis connection strings
# Default: localhost:6379
REDIS_URL=localhost:6379

# =============================================================================
# Nomad Configuration
# =============================================================================

# Nomad HTTP API endpoint
# Type: string, Format: "http://host:port", "http://localhost:4646"
# Range: Valid HTTP URLs
# Default: http://localhost:4646
NOMAD_ADDRESS=http://localhost:4646

# List of Nomad datacenters to deploy jobs to
# Type: string, Format: "dc1", "dc1,dc2"
# Range: Valid datacenter names
# Default: dc1
NOMAD_DATACENTERS=dc1

# Private to public IP address mappings
# Type: string, Format: "private1:public1,private2:public2"
# Range: Valid IP address pairs
# Default: 172.26.15.163:52.221.213.97
NOMAD_IP_MAPPINGS=172.26.15.163:52.221.213.97

# =============================================================================
# Matchmaking Configuration
# =============================================================================

# How long a ticket stays valid before expiring (in seconds)
# Type: integer, Format: 120, 300, 600
# Range: 30 - 3600 seconds (30s - 1h)
# Default: 120 (2 minutes)
TICKET_TTL_SECONDS=120

# Maximum time to wait for server allocation (in minutes)
# Type: integer, Format: 2, 5, 10
# Range: 1 - 30 minutes
# Default: 2 minutes
ALLOCATION_TIMEOUT_MINUTES=2

# Delay between allocation status checks (in seconds)
# Type: integer, Format: 2, 5, 10
# Range: 1 - 30 seconds
# Default: 2 seconds
ALLOCATION_POLL_DELAY_SECONDS=2

# =============================================================================
# Cron Configuration
# =============================================================================

# Grace period before cleaning up zombie rooms (in seconds)
# Type: integer, Format: 60, 120, 300
# Range: 30 - 600 seconds (30s - 10m)
# Default: 60 (1 minute)
CRON_GRACE_SECONDS=60

# Prefix for Nomad job names to identify game servers
# Type: string, Format: "game-server-", "gs-", "game-"
# Range: Valid string prefixes
# Default: game-server-
CRON_JOB_PREFIX=game-server-

# How often to run consistency checks (in seconds)
# Type: integer, Format: 10, 30, 60
# Range: 5 - 300 seconds (5s - 5m)
# Default: 10 seconds
CRON_INTERVAL_SECONDS=10

# =============================================================================
# Timeout Configuration
# =============================================================================

# Timeout for HTTP client requests (in seconds)
# Type: integer, Format: 5, 10, 30
# Range: 1 - 120 seconds (1s - 2m)
# Default: 5 seconds
HTTP_CLIENT_TIMEOUT_SECONDS=5

# Timeout for Redis ping operations (in seconds)
# Type: integer, Format: 2, 5, 10
# Range: 1 - 30 seconds (1s - 30s)
# Default: 2 seconds
REDIS_PING_TIMEOUT_SECONDS=2

# Timeout for server context operations (in seconds)
# Type: integer, Format: 5, 10, 30
# Range: 1 - 120 seconds (1s - 2m)
# Default: 5 seconds
SERVER_CONTEXT_TIMEOUT_SECONDS=5
